@model IEnumerable<MiniStore.Models.Entities.Order>

@{
    ViewData["Title"] = "Order";
    int i = 0;
}
<button class="btn btn-primary" type="button" data-bs-toggle="collapse" data-bs-target="#ShowOrderData">ShowOrderData</button>


<table class="table" >
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>

                @Html.DisplayNameFor(model => model.Customer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderStatus)
            </th>          
            <th>Update </th>
            <th>
                Show Details
            </th>
            <th>Info</th>
        </tr>
    </thead>
        <tbody>
        @foreach (var item in Model)
        {
                
             <div class="panel-group" id="accordion_@i">
                <tr >
                    <div class="panel panel-default" id="panel_@i">
                    <td>
                    <div class="panel-heading">
                        <h4 class="panel-title">
                            <a data-bs-toggle="collapse" data-bs-parent="#accordion_@i" data-bs-target="#collapseOne_@i" href="#collapseOne_@i">
                                        @Html.DisplayFor(modelItem => item.Id)
                            </a>
                        </h4>
                    </div>
                </td>
                    <td>
                        <div class="panel-heading">
                        <h4 class="panel-title">
                            <a data-bs-toggle="collapse" data-bs-parent="#accordion_@i" data-bs-target="#collapseOne_@i" href="#collapseOne_@i">
                                        @Html.DisplayFor(modelItem => item.Customer.UserName)
                            </a>
                        </h4>
                    </div>                  
                    </td>
                    <td>
                    <div class="panel-heading">
                        <h4 class="panel-title">
                            <a data-bs-toggle="collapse" data-bs-parent="#accordion_@i" data-bs-target="#collapseOne_@i" href="#collapseOne_@i">
                                        @Html.DisplayFor(modelItem => item.OrderDate)
                            </a>
                        </h4>
                    </div>
                    
                </td>
                    <td>
                    <div class="panel-heading">
                        <h4 class="panel-title">
                            <a data-bs-toggle="collapse" data-bs-parent="#accordion_@i" data-bs-target="#collapseOne_@i" href="#collapseOne_@i">
                                        @Html.DisplayFor(modelItem => item.OrderStatus)
                            </a>
                        </h4>
                    </div>
                   
                </td>
                    <td >
                    </td>
                    <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>           
                    </div>
               <td>

                    @foreach(var product in item.OrderDetails)
                    {
                      <div id="collapseOne_@i"  class="panel-collapse collapse ">
                            <div class="panel-body">
                                  @product.Product.Name : @product.Quantity x @product.UnitPrice
                            </div>
                       </div>
                    }
                    @{i++;}
                </td>
            </tr>
       </div>
       
          
        }
        
    </tbody>
</table>
