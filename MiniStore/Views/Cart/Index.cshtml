@model MiniStore.Models.Entities.Order

@{

}


<section id="Cart_page" class="h-100 h-custom  " style="background-color: #d2c9ff;">
    <div class="container float-right">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-6">
                <div class="card card-registration card-registration-2" style="border-radius: 15px;">
                    <div class="card-body p-0">
                        <div class="row g-0">
                            <div class="col-lg-12">
                                <div class="p-5">
                                    @if (Model != null && Model.OrderDetails != null && Model.OrderDetails.Count > 0)
                                    {
                                    <div class="d-flex justify-content-between align-items-center mb-5">
                                        <h1 class="fw-bold mb-0 text-black">Shopping Cart</h1>
                                        <h6 class="mb-0 text-muted"> @Model.OrderDetails.Count() </h6>
                                    </div>
                                    <hr class="my-4">
                                    
                                        @foreach (var item in Model.OrderDetails)
                                        {

                                          <div class=" input-group mb-3  d-flex justify-content-between align-items-center">
                                                <div class="col-sm-2 col-md-2 col-lg-3 col-xl-3">
                                                    <img src="~/images/@item.Product.Photo"
                                                 class="img-fluid rounded-3" alt="Cotton T-shirt">
                                              </div>
                                                <div class="col-sm-2 col-3">
                                                    <h6 class="text-black mb-0"> @item.Product.Name</h6>
                                              </div>
                                              <div class="input-group-prepend col-md-1  flex ">
                                                <a class=" input-group-text btn btn-info " href="/Cart/DeleteItemInCart?ProductId=@item.Product.Id ">-</a>
                                              </div>
                                               <input class="form-control" id="form1" min="0" name="quantity" value=@item.Quantity type="number"/>
                                              <div class="input-group-append col-md-1  flex ">

                                                <a class=" input-group-text btn btn-info " href="/Cart/AddItemToCart?ProductId=@item.Product.Id ">+</a>
                                              </div>
                                        
                                        <div class="col-3 offset-lg-1">
                                                    <h6 class="mb-0"> X @item.Product.Price2 $</h6>
                                        </div>
                                       
                                                </div>
                                            
                                            <hr class="my-4">
                                        }
                                        <div class="my-2">
                                            <h5>Total: @(Model.OrderDetails.Select(item => item.Product.Price2 * item.Quantity).Sum()) </h5>
                                            
                                        </div>
                                        <div class="my-2">
                                            <a class="btn btn-primary" href="/Cart/CheckOut?Total= @(Model.OrderDetails.Select(item => item.Product.Price2 * item.Quantity).Sum()) ">Checkout</a>
                                        </div>
                                        <div class="pt-5">
                                            <h6 class="mb-0">
                                                <a href="/Home" class="text-body">
                                                    <i class="fas fa-long-arrow-alt-left me-2"></i>Back to shop
                                                </a>
                                            </h6>
                                        </div>
                                    }
                                    else
                                    {
                                        <h5>Cart is empty</h5>
                                    }
                                 </div>

                            </div>
                       </div>
                   </div>
               </div>
            </div>
        </div>
    </div>
</section>
